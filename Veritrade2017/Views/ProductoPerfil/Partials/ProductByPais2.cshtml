                        @if (@objProductByPaises.Exportadores != 0)
                        {
                            <li id="cantEmpExpor" style="display: inline"><strong>@objProductByPaises.Exportadores</strong></li>
                        }
                        else
                        {
                            <li id="cantEmpExpor" style="display: inline"><strong>@ProductProfileResources.Not_Specified</strong></li>
                        }
                        <br />
                        <li style="display: inline">- @ProductProfileResources.Records: </li>
                        <li id="regImpor" style="display: inline"><strong>@string.Format(idiomaText, "{0:N0}", objProductByPaises.RegistrosE)</strong></li>
                    </ul>
                </p>
            </div>
            <div style="margin: 25px 0"></div>
        </div>
    }
    else
    {
        <div class="margin-info ui-info">
            <div class="col-xs-12 col-sm-6 table-cell">
                <p class="info-description">
                    <span>@ProductProfileResources.Exports.ToUpper()</span>
                    <ul class="lista-descripcion">
                        <li style="display: inline">- US$: </li>
                        <li id="valorExpor" style="display: inline"><strong>@string.Format(idiomaText, "{0:N0}", objProductByPaises.Exportaciones)</strong></li>
