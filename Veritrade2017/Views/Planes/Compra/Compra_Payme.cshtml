    {
          <input type="button" class="button-pagar" onclick="javascript: AlignetVPOS2.openModal('https://integracion.alignetsac.com/');" value="Comprar">
        
    }
    else
    {
        <input type="button" class="button-pagar" onclick="javascript: AlignetVPOS2.openModal('', '2');" value="Comprar">
    }
</form>