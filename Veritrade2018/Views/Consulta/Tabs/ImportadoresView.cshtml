@using Veritrade2018.Models
@{
    var modelo = (ConsultaForm)Model;
}
<div class="tab-pane" id="tab-importadores">
    <div class="row">
        <div class="col-xs-12 col-sm-12 divTabMessageExcel">
            @Resources.Resources.Demo_ExcelDonwloadMessage_Part1
            <span class="spanTabMessageExcel">@Resources.Resources.Demo_Importers_Tab</span>
            @Resources.Resources.Demo_ExcelDonwloadMessage_Part2&nbsp;
            <a class="downloadExcel">
                <img src="~/Content/Images/bot_excel_off.png" width="24" height="24" class="ico_excel" alt="" />
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 columnTabImportadores">
            <div class="table-responsive">
                <table id="table-tabImportadores" class="table cell-border compact datatable-page-demo" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Resources.Resources.Demo_Importers_Tab
                                <br />
                                <select id="cboTabImportadoresImportOrExport" data-filtro-cbo='@(modelo.TipoOpe == "I" ? "Importador" : "ImportadorExp")' class="form-control filter-select-datatable cboFiltoDataTable">
                                    <option value="0" selected="selected">
                                        @Resources.Resources.Option_Filter_All
                                    </option>
                                </select>
                            </th>
                            <th>@Resources.Resources.Grid_Column_SeeRecords</th>
                            <th>
                                Total US$ @modelo.Cif
                                @*@(modelo.TipoOpe == "I" ? Resources.Resources.Grid_ColumnHeader_ImportCIF : Resources.Resources.Grid_ColumnHeader_ExportCIF)*@
                            </th>
                            <th>%</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

                <div class="section-btn-tabs">
                    <button class="btn pull-right" id="btnTabAddImportadoresImportOrExport" data-filtro-chk="@(modelo.TipoOpe == "I" ? "Importador" : "ImportadorExp")">
                        @Resources.Resources.Add_Filter_Search_Button
                    </button>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div id="pieChartImporters" style="width: 100%; height: 400px; margin: 0 auto"></div>
        </div>
    </div>
</div>