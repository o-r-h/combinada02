@using Veritrade2018.Helpers
@using Veritrade2018.Models.Admin
@using Veritrade2018.Util;
@{

    var flagAlertas = VarGeneral.Instance.ValuesDict[Enums.VarId.VISIBILIDAD_ALERT_USER.GetDn()].Valores;
    var visibleAlert = FuncionesBusiness.GetLimitAlert(Funciones.ObtieneIdPlan(Session["IdUsuario"].ToString()), "AMP");
}
<div class="modal fade" tabindex="-1" role="dialog" id="ModalAgregarFavoritos">
    <div class="modal-dialog modal-favorite" role="document">
        <div class="modal-content" style="padding: 20px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="icon-close-modal" aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <span id="tituloAgregarFavoritos">
                    </span>
                    <span class="subTituloAgregarFavoritos">
                        @Resources.AdminResources.SelectItemsAdd_Text
                    </span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="tablaAgregarFavoritos" class="table-responsive">

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 form-agregarFavoritos">

                        <div class="form-inline campos-agregarFavoritos" style="padding-right: 10px;">
                            <div class="checkbox" style="padding-right: 10px;">
                                <label>
                                    <input id="chkAgregarAFavorito" type="checkbox"> <label id="lblAgregarAFavorito" for="chkAgregarAFavorito" style="font-size: 12px; min-height: 19px; "></label>
                                </label>
                            </div>

                            <div class="checkbox">
                                <label style="font-size: 12px;">
                                    <input id="chkCrearGrupo" type="checkbox"> @Resources.AdminResources.CreateNewGroup_Text
                                </label>
                            </div>

                            <div class="form-group" style="padding-right:10px; padding-left: 5px;">
                                <input style="font-size: 12px;" id="txtNuevoGrupo" type="text" class="form-control" />
                            </div><br /><br />


                            <div class="form-group" style="padding-right: 10px; font-size: 12px; padding-left: 5px;">
                                <div class="checkbox" style="padding-right: 10px;">
                                    <label style="font-size:12px;">
                                        <input id="chkAgregarAGrupo" type="checkbox"> @Resources.AdminResources.AddToGroup_Text
                                    </label>
                                </div>
                                <select id="cboGrupos" class="form-control"></select>
                            </div>

                            @if (flagAlertas == "1" /*&& Session["tipoUsuario"].ToString() != "Free Trial" && !(bool)(Session["IngresoComoFreeTrial"] ??false)*/ && visibleAlert > 0)
                            {
                                <div class="checkbox" id="chkAlerta">
                                    <label>
                                        <input id="chkAgregarAlerta" type="checkbox"> <label id="lblAgregarAlerta" for="chkAgregarAlerta" style="font-size: 12px; min-height: 19px; ">@Resources.AdminResources.AddToGroup_Text_To_Alerta</label>
                                    </label>
                                </div>
                            }
                        </div>

                        <div class="form-inline mensajeValidacion-agregarFavoritos">
                            <span id="lblEstadoGrupos"></span>
                        </div>

                    </div>

                    <div class="col-sm-12 text-center">
                        <button id="btnAgregarAFav" class="btn btn-addToFilters">
                            @Resources.AdminResources.Add_Text
                        </button>
                        <button id="CancelarFav" class="btn btn-addToFilters">
                            @Resources.AdminResources.Cancel_Text
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



