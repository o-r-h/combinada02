@using Veritrade2018.Helpers
@{
    var culture = CultureHelper.GetCurrentCulture();

    string imagenBaseNueva;
    string directorioImagenBaseNueva = "imagenes4/";

    if(culture == "es")
    {
        imagenBaseNueva = "MXD_Es.png";
    }else
    {
        imagenBaseNueva = "MXD_EN.png";
    }

    var urlImagenBaseNueva = Url.Content(directorioImagenBaseNueva + imagenBaseNueva);
}
<div class="modal fade ventana_fondo" tabindex="-1" role="dialog" id="ModalVentanaAviso">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="icon-close-modal" aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <img src="@Url.Content("/Content/Images/veritrade_logo.png")" width="69" height="45" />
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="text-center title-ventana-aviso"  >
                            <span>
                                @Resources.AdminResources.Modal_VentanaAviso_VeritradeNews
                            </span>
                            <br />
                            <span>
                                @Resources.AdminResources.Modal_VentanaAviso_NewDatabase
                                <img src="@Url.Content("/Content/Images/flag_mexico.png")" alt="" />
                            </span>
                        </div>

                        <div class="texto-ventana-aviso">
                            <b>
                                @Resources.AdminResources.Modal_VentanaAviso_Greeting
                            </b>
                        </div>

                        <div class="texto-ventana-aviso">
                            <p>
                                @Html.Raw(Resources.AdminResources.Modal_VentanaAviso_Message1)
                            </p>                            
                        </div>

                        <div class="text-center">
                            @*<img src="@urlImagenBaseNueva" alt="" width="464" height="229" border="1" />*@
                            <!--img src="imagenes4/MXD_Es.png" width="464" height="229" border="1" /-->
                        </div>

                        <div class="texto-ventana-aviso">
                            <p>
                                @Html.Raw(Resources.AdminResources.Modal_VentanaAviso_Message2)
                            </p>                          
                        </div>

                        <div class="texto-ventana-aviso">
                            @Resources.AdminResources.Modal_VentanaAviso_InvitationNewDatabase
                            <br />
                            <button id="btnContactus" class="btn btn-contactus">
                                @Resources.AdminResources.Modal_VentanaAviso_Contactus_Button
                            </button>
                        </div>

                        <div class="texto-ventana-aviso sign-ventana-aviso">
                            @Resources.AdminResources.Modal_VentanaAviso_Att
                            <br />
                            <b>
                                @Resources.AdminResources.Modal_VentanaAviso_Sign
                                <br />
                                <i>@Resources.AdminResources.Modal_VentanaAviso_Slogan</i>
                            </b>                           
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
