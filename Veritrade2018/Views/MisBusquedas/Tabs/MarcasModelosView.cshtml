@using Veritrade2018.Util
<div class="tab-pane" id="tab-marcasModelos">
    <div class="row">
        <div class="col-md-12 title-brandsModel">
            @Resources.Resources.Title_Tab_BrandsModels
        </div>
    </div>

    <div class="row">
        <div id="@("grid"+Enums.Filtro.Marca)"  class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="form-select-themes pull-right">
                    <div class="form-group text-center col-sm-12 col-xs-12 group-select-themes">
                        <label class="control-label">
                            @Resources.AdminResources.ChartThemes_Text:
                        </label>
                        <select id="@("themesChart" + Enums.Filtro.Marca)"
                                data-filtro="@Enums.Filtro.Marca.ToString()"
                                class="form-control filter-selectField-vt select-themes">
                        </select>
                    </div>
               
            </div>

            <div id="@("pieChart" + Enums.Filtro.Marca)" class="pie-chart" style="width: 100%; height: 400px; margin: 0 auto; "></div>
        </div>
    </div>

    <div class="row">
        <div id="@("grid"+Enums.Filtro.Modelo)" class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        </div>
    </div>

</div>
