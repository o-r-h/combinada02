@using Veritrade2018.Models
@using Veritrade2018.Helpers
@{
    var culture = CultureHelper.GetCurrentNeutralCulture();
}
<div class="modal fade" tabindex="-1" role="dialog" id="ModalTerminosCondiciones">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal_popup">
                    <div class="title">
                        <h2>@Resources.Resources.Footer_TermsConditions</h2>
                    </div>
                    <div class="terminos_condiciones_content">
                        @Html.Raw(Configuraciones.GetConfig(culture, "terminos_condiciones_home").Valor)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 