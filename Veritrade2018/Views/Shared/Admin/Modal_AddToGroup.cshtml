@using Veritrade2018.Models.Admin
@{
    AdminMyFavorite objAdminMyFavorite = (AdminMyFavorite)Model;
}
<div class="modal fade" tabindex="-1" role="dialog" id="ModalAddToGroup">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="padding: 20px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="icon-close-modal" aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <span id="tituloAgregarFavoritos">
                        @Resources.MiPerfil.Btn_AddSelectionToAGroup
                    </span>
                </h4>
            </div>
            <div class="modal-body">
                
                <div class="row">
                    <div class="col-sm-12 form-agregarFavoritos">

                        <div class="form-inline campos-agregarFavoritos">

                            @Html.RadioButton("rdbGrupos", "C", !objAdminMyFavorite.EnabledCboGroupsForm, new { id = "rdbCreaGrupo" })
                            <label for="rdbCreaGrupo">
                                @Resources.AdminResources.CreateNewGroup_Text
                            </label>

                            <div class="form-group">
                                <input id="txtNuevoGrupo" type="text" class="form-control" />
                            </div>

                            @{
                                var atributesRdbAgregarAGruppo = new Dictionary<string, object> {{"id", "rdbAgregaAGrupo"}};
                                if (!objAdminMyFavorite.EnabledCboGroupsForm)
                                {
                                    atributesRdbAgregarAGruppo.Add("disabled", "disabled");
                                }
                            }

                            @Html.RadioButton("rdbGrupos", "A", objAdminMyFavorite.EnabledCboGroupsForm, atributesRdbAgregarAGruppo)

                            <label for="rdbAgregaAGrupo">
                                @Resources.AdminResources.AddToGroup_Text
                            </label>
                            <div class="form-group">
                                @{
                                    var attributesCboGrupos = new Dictionary<string, object> {{"class", "form-control"}};

                                    if (!objAdminMyFavorite.EnabledCboGroupsForm)
                                    {
                                        attributesCboGrupos.Add("disabled", "disabled");
                                    }
                                }
                                @Html.DropDownList("cboGrupos", new SelectList(objAdminMyFavorite.SoloGruposFavoritos.ToList(), "Value", "Text"), attributesCboGrupos)
                            </div>
                        </div>

                        <div class="form-inline mensajeValidacion-agregarFavoritos">
                            <span id="lblMsgAddToGroup"></span>
                        </div>

                    </div>

                    <div class="col-sm-12 text-center">
                        <button id="btnUpdateGroup" class="btn boton-opcion margin-height-sm ">
                            @Resources.MiPerfil.Btn_AddToGroup
                        </button>
                        
                        @Html.ActionLink(Resources.MiPerfil.Btn_GoToMyGroups, "Index", "AdminMisGrupos", new{ tipoFavorito = objAdminMyFavorite.TipoFavorito}, new{@class= "btn boton-opcion margin-height-sm" })

                        <button id="btnCancelUpdateGroup" class="btn boton-opcion margin-height-sm ">
                            @Resources.AdminResources.Cancel_Text
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



