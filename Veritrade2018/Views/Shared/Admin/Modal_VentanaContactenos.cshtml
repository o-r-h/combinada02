<div class="modal fade ventana_fondo" tabindex="-1" role="dialog" id="ModalVentanaContactenos">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="icon-close-modal" aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="text-center title-ventana-contactenos">
                            <p>
                                @Resources.AdminResources.Modal_VentanaContactenos_Title
                            </p>
                            <img src="@Url.Content("/Content/Images/flecha_old.png")" width="53" height="20" />
                        </div>

                        <div >
                            <div class="form-group">
                                <label for="txtMensaje">@Resources.AdminResources.Modal_VentanContactenos_FormLabelMessage</label>
                                @Html.TextArea("txtMensaje", null, new { @class = "form-control", @rows="5", @cols="45" })
                            </div>

                            <div class="text-center">
                                <button id="btnEnviarMensaje" class="btn">
                                    @Resources.AdminResources.Modal_VentanaContactenos_SendButton &nbsp;&gt;
                                </button>
                            </div>
                        </div>                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
