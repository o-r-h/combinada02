@using Veritrade2018.Models;
@{
    ViewBag.Title = "Veritrade";
    Layout = "~/Views/Shared/_CorreoLayout.cshtml";

    Correo objCorreo = (Correo)ViewData["objCorreo"];
}
<tr>
    <td>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td width="1%">
                    <img src="@Url.Content("~/Content/Images/transparente.gif")" width="40" height="90" />
                </td>
                <td width="98%">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td>
                                <br />
                            </td>
                        </tr>
                        <tr>
                            <td style="font-family: Verdana, Geneva, sans-serif; font-weight: bold; font-size: 20.3px; line-height: 28px; text-decoration: none; color: #212936;">@objCorreo.Titulo</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="font-family: Verdana, Geneva, sans-serif; font-weight: bold; font-size: 18.2px; line-height: 22px; text-decoration: none; color: #212936;">Datos del Usuario</td>
                        </tr>
                        <tr>
                            <td style="font-family: ProximaNova-Bold; font-size: 20px; line-height: 22px; text-decoration: none; color: #212936;">
                                <img src="@Url.Content("~/Content/Images/transparente.gif")" width="100" height="7" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table width="100" border="0" cellpadding="0" cellspacing="0" style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 22px; text-decoration: none; color: #212936; white-space: nowrap;">
                                    @if (objCorreo.CodUsuario != "")
                                    {
                                        <tr>
                                            <td style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Usuario:</td>
                                            <td>&nbsp;</td>
                                            <td>@objCorreo.CodUsuario</td>
                                        </tr>
                                    }
                                  
                                    <tr>
                                        <td width="140" style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Nombres:</td>
                                        <td width="18">
                                            <img src="@Url.Content("~/Content/Images/transparente.gif")" width="18" height="18" />
                                        </td>
                                        <td width="259">@objCorreo.Nombres</td>
                                    </tr>
                                    <tr>
                                        <td style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Empresa (opcional):</td>
                                        <td>&nbsp;</td>
                                        <td>@objCorreo.Empresa</td>
                                    </tr>
                                    <tr>
                                        <td style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Teléfono:</td>
                                        <td>&nbsp;</td>
                                        <td>@objCorreo.Telefono</td>
                                    </tr>
                                    <tr>
                                        <td style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Correo:</td>
                                        <td>&nbsp;</td>
                                        <td>@objCorreo.Email1</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="font-family: Verdana, Geneva, sans-serif; font-weight: bold; font-size: 18.2px; line-height: 22px; text-decoration: none; color: #212936;">Mensaje</td>
                        </tr>
                        <tr>
                            <td style="font-family: ProximaNova-Bold; font-size: 20px; line-height: 22px; text-decoration: none; color: #212936;">
                                <img src="@Url.Content("~/Content/Images/transparente.gif")" width="100" height="7" />
                            </td>
                        </tr>
                        <tr>
                            <td style="font-family: Verdana, Geneva, sans-serif; font-size: 13px; line-height: 18px; text-decoration: none; color: #212936;">@objCorreo.Mensaje</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td style="font-family: Verdana, Geneva, sans-serif; font-weight: bold; font-size: 18.2px; line-height: 22px; text-decoration: none; color: #212936;">Datos de conexión</td>
                        </tr>
                        <tr>
                            <td style="font-family: ProximaNova-Bold; font-size: 20px; line-height: 22px; text-decoration: none; color: #212936;">
                                <img src="@Url.Content("~/Content/Images/transparente.gif")" width="100" height="7" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <table width="100" border="0" cellpadding="0" cellspacing="0" style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 22px; text-decoration: none; color: #212936; white-space: nowrap;">
                                    <tr>
                                        <td width="140" style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Dirección IP: </td>
                                        <td width="18">
                                            <img src="@Url.Content("~/Content/Images/transparente.gif")" width="18" height="18" />
                                        </td>
                                        <td width="259">@objCorreo.DireccionIP</td>
                                    </tr>
                                    <tr>
                                        <td style="font-family: Verdana, Geneva, sans-serif; font-size: 15.5px; line-height: 16px; text-decoration: none; color: #65a5e2;">Ubicación: </td>
                                        <td>&nbsp;</td>
                                        <td>@objCorreo.Ubicacion</td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="@Url.Content("~/Content/Images/transparente.gif")" width="40" height="50" />
                            </td>
                        </tr>
                    </table>
                </td>
                <td width="1%">
                    <img src="@Url.Content("~/Content/Images/transparente.gif")" width="40" height="90" />
                </td>
            </tr>
        </table>
    </td>
</tr>