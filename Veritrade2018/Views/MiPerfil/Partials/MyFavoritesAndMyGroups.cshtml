@using Veritrade2018.Models.Admin
@{
    var objPerfil = (MiPerfil)Model;

    var objFlagsFavoritesAndGroups = objPerfil.MyFavoriteAndGroup;
}
<div class="col-xs-12 col-sm-12">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h3 class="tittle-opcion">
                @Resources.MiPerfil.SettingUpMyFavorites_Text
            </h3>
            <p class="description-opcion">
                @Resources.MiPerfil.DescriptionFavorites_Text
            </p>
            @if (objFlagsFavoritesAndGroups.ExistPartida)
            {
                <div class="form-group">
                    <a href="@Url.Action("Index", "AdminMisProductos")" class="btn boton-opcion" role="button">
                        @Resources.AdminResources.Filter_MyProducts_Button
                    </a>
                </div>
            }
            @if (objFlagsFavoritesAndGroups.ExistImporter || objFlagsFavoritesAndGroups.ExistExporter)
            {
                <div class="form-group">
                    <a href="@Url.Action("Index", "AdminMisFavoritos", new {tipoFavorito = objFlagsFavoritesAndGroups.ExistImporter ? "Importador" : "Exportador"})" class="btn boton-opcion" role="button">
                        
                        @(objPerfil.TipoOpe == "I" ? Resources.AdminResources.Filter_MyImporters_Button : Resources.AdminResources.Filter_MyExporters_Button)
                    </a>
                </div>
            }
            @if (objFlagsFavoritesAndGroups.ExistSupplier || objFlagsFavoritesAndGroups.ExistImporterExp)
            {
                <div class="form-group">
                    <a href="@Url.Action("Index", "AdminMisFavoritos", new {tipoFavorito = objFlagsFavoritesAndGroups.ExistImporter ? "Proveedor" : "ImportadorExp"})" class="btn boton-opcion" role="button">
                        
                        @(objPerfil.TipoOpe == "I" ? (objPerfil.CodPaisSelected != "CL" ? Resources.AdminResources.Filter_MyExporters_Button : Resources.AdminResources.Filter_MyBrands_Button) : Resources.AdminResources.Filter_MyImporters_Button)
                    </a>
                </div>
            }
        </div>
        <div class="col-xs-12 col-sm-6">
            <h3 class="tittle-opcion">
                @Resources.MiPerfil.SettingUpMyGroups_Text
            </h3>
            <p class="description-opcion">
                @Resources.MiPerfil.DescriptionGroups_Text
            </p>
            @if (objFlagsFavoritesAndGroups.ExistPartida)
            {
                <div class="form-group">
                    <a href="@Url.Action("Index", "AdminMisGrupos", new {tipoFavorito = "Partida"})" class="btn boton-opcion" role="button">
                        @Resources.MiPerfil.Btn_MyProductsGroups
                    </a>
                </div>
            }
            @if (objFlagsFavoritesAndGroups.ExistImporter || objFlagsFavoritesAndGroups.ExistExporter)
            {
                <div class="form-group">
                    <a href="@Url.Action("Index", "AdminMisGrupos", new {tipoFavorito = objFlagsFavoritesAndGroups.ExistImporter ? "Importador": "Exportador"})" class="btn boton-opcion" role="button">
                        @(objPerfil.TipoOpe =="I" ? Resources.MiPerfil.Btn_MyImportersGroups : Resources.MiPerfil.Btn_MyExportersGroups)
                    </a>
                </div>
            }
            @if (objFlagsFavoritesAndGroups.ExistSupplier || objFlagsFavoritesAndGroups.ExistImporterExp)
            {

                <div class="form-group">
                    <a href="@Url.Action("Index", "AdminMisGrupos", new {tipoFavorito = objFlagsFavoritesAndGroups.ExistImporter ? "Proveedor" : "ImportadorExp"})" class="btn boton-opcion" role="button">
                        @(objPerfil.TipoOpe == "I" ? (objPerfil.CodPaisSelected != "CL" ? Resources.MiPerfil.Btn_MyExportersGroups : Resources.MiPerfil.Btn_MyBrandsGroups) : Resources.MiPerfil.Btn_MyImportersGroups)
                    </a>
                </div>
            }
        </div>
    </div>
</div>